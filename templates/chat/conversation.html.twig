{% extends 'layout-2.html.twig' %}

{% block title %}Conversations{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('assets/css/chat.css') }}">
{% endblock %}

{% block left_sidebar %}
    {% if app.user.chatConversations is not empty %}
        <div class="card conversations">
            <div class="card-header">
                Conversations
            </div>
            <div class="list-group list-group-flush">
                {% for conversation in app.user.chatConversations %}
                    <a class="list-group-item list-group-item-action" href="{{ path('conversation_view', { id: conversation.id }) }}">
                        <div class="d-flex w-100 justify-content-between">
                        {% if conversation.participants[0].username == app.user.username %}
                            {% set correspondant = conversation.participants[1].username %}
                        {% else %}
                            {% set correspondant = conversation.participants[0].username %}
                        {% endif %}
                            <strong class="mb-1">With {{ correspondant }}</strong>
                            <strong class="mb-1">{{ conversation.name }}</strong>
                        </div>
                        {% if conversation.chatMessages is not empty %}
                            {% set lastChatMessage = conversation.chatMessages|last %}
                            <p class="mb-1">{{ lastChatMessage.content }}</p>
                            <small>{{ lastChatMessage.sender.username }}, {{ lastChatMessage.submitTime|date}}</small>
                        {% else %}
                            <small>No messages</small>
                        {% endif %}
                    </a>
                {% endfor %}
                <form action="{{ path('messages') }}"><button class="btn btn-primary start_conv">Start a conversation</button></form>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block center_body %}
    <div class="p-4 chat card">
        {% if conversation.participants[0].username == app.user.username %}
            {% set correspondant = conversation.participants[1].username %}
        {% else %}
            {% set correspondant = conversation.participants[0].username %}
        {% endif %}
        <h1 class="chat_title">Conversation with {{ correspondant }}</h1>
        <div class="chat_conversation">
        {% for m in messages %}
            {% if m.sender == app.user %}
                <div class="message_user">
                    <div class="message_user_manager">
                        <div class="message_user_container">
                            <span class="date_user">: {{ m.submitTime|date('H:i') }}</span>
                            <span class="content">{{ m.content }}</span>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="message">
                    <div class="message_manager">
                        <div class="message_container">
                            <span class="date">{{ m.submitTime|date('H:i') }}</span>
                            <span class="author"><a href="{{ path('profile_view', { username: m.sender.username }) }}">@{{ m.sender.username }}</a> :</span>
                            <span class="content">{{ m.content }}</span>
                        </div>
                    </div>
                </div>
            {% endif %}      
        {% endfor %}
        </div>
        {{ form_start(formMessages, {attr: {'id': 'formMessages'}}) }}
                
        {{ form_errors(formMessages.content) }}
        {{ form_widget(formMessages.content) }}

        <button type="submit" id="send" class="btn btn-primary">Send</button>

        {{ form_end(formMessages) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/chat.js') }}"></script>
{% endblock %}