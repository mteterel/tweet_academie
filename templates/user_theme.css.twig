}

.navbar .nav-link.active {
    color: {{ primaryColor|raw }};
    border-bottom-color: {{ primaryColor|raw }};
}

#profile-nav a.nav-link {
    color: {{ primaryColor|raw }};
}

#user_post_content::placeholder {
    color: {{ primaryColor|raw }};
}

.btn-primary:not(:disabled):not(.disabled).active, .btn-primary:not(:disabled):not(.disabled):active, .show > .btn-primary.dropdown-toggle {
    background-color: {{ primaryColor|raw }};
    border-color: {{ primaryColor|raw }};
}

.nav-pills .nav-link.active {
    background-color: {{ primaryColor|raw }};
}

.mini-user-profile a, .mini-user-profile a:hover,
.post-card__author-name, .post-card__author-name:hover,
.trend-list__link, .trend-list__link:hover,
