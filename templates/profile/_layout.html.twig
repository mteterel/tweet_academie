{% extends 'base.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/profile.css') }}">
{% endblock %}
{% block title %}Profile{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div id="banner" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <img class="img-fluid" src="http://placehold.it/1920x350" alt="placeholder image">
            </div>
            <div class="nav-profile">
                <div class="container">
                    <ul id="nav-ul" class="d-flex justify-content-md-center">
                        <li id="nav-link" class="nav-link">Quacks<a href="#"></a></li>
                        <li id="nav-link" class="nav-link">Following<a href="#"></a></li>
                        <li id="nav-link" class="nav-link">Followers<a href="#"></a></li>
                        <li id="nav-link" class="nav-link">Likes<a href="#"></a></li>
                        <li id="nav-link" class="nav-link">Lists<a href="#"></a></li>
                        <li id="nav-link" class="nav-link">Moments<a href="#"></a></li>
                        <li><button type="button" class="btn btn-primary edit-profile">Edit Profile</button></li>
                    </ul>
                </div>
            </div>
            <div class="container">
                <div class="profile-avatar">
                    <img src="{{ asset('assets/img/female.png') }}" height="200" width="200" alt="Profile picture" class="avatar">
                </div>
            </div>
            {# Bottom container #}
            <div class="container my-2">
                <div class="row">
                    <div class="col-lg-3" style="margin-top: 70px;">
                        {% block profile_left %}
                        {% endblock %}
                    </div>
                    <div class="col-lg-6">
                        {% block profile_center %}
                        {% endblock %}
                    </div>
                    <div class="col-lg-3">
                        {% block profile_right %}
                            zzeze
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}