{% extends 'profile/_layout.html.twig' %}

{% block title %}People following {{ user.displayName }} (@{{ user.username }}) | Ducker{% endblock %}

{% block profile_center %}
    {% if user.followers is not empty %}
        <div class="card">
            <div class="card-header">
                <strong>Followers</strong>
            </div>
            <div class="list-group list-group-flush">
                <div class="card-group">
                    {% for follower in user.followers %}
                        <div class="card">
                            <div class="card-body">
                                <p class="card-title">
                                    <strong>{{ follower.follower.displayName }}</strong>
                                    <span> (@{{ follower.follower.username }})</span>
                                </p>
                                <p class="card-text">
                                    <a href="{{ path('profile_view', { username: follower.follower.username }) }}">
                                        <img id="avatar" src="{{ asset('assets/img/female.png') }}" height="64" width="64">
                                    </a>
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% else %}
        <p><strong>@{{ user.username }}</strong> has no followers</p>
    {% endif %}
{% endblock %}