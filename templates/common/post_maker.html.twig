{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/post_maker.css') }}">
{% endblock %}

{% set defaultPlaceholder = 'What\'s quacking ?' %}
{% set placeholder = inputPlaceholder ?? defaultPlaceholder %}

<div id="post_maker-wrapper" class="post_maker-wrapper">
    <div class="d-flex post_maker">
        <span>
            {% if app.user.avatarPath is empty %}
                <img src="{{ asset('assets/img/user-placeholder.png') }}" height="32" width="32" alt="Profile picture" class="mini-avatar">
            {% else %}
                <img src="{{ asset('upload/avatar/'~ app.user.avatarPath) }}" height="32" width="32" alt="Profile picture" class="mini-avatar">
            {% endif %}
        </span>
        {{ form_start(formPost, {attr: {'id': 'formPostMaker'}}) }}
        {{ form_row(formPost.content, {attr: {'placeholder': placeholder }}) }}
        <div class="d-none">
            {{ form_row(formPost.media_url, {attr: {'class': 'inputUpload'}}) }}
        </div>
        {{ form_row(formPost.parent_post_id, {value: parentPostId ?? null}) }}
        {{ form_end(formPost) }}
    </div>
    <span class="quacker-btn-displayer">
        <span class="d-flex justify-content-between quacker-btn-displayer">
            <span></span>
            <span>
                <button class="btn add-file-post_maker"><img src="{{ asset('assets/img/paper-clip.png') }}"></button>
                <button class="submit-post_maker btn btn-primary">Quacker</button>
            </span>
        </span>
    </span>
</div>
<div class="suggestions"></div>