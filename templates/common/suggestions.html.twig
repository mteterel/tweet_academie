<div class="card">
    <div class="card-header">Who to follow</div>
    <div class="card-body">
        <div class="list-group list-group-flush"
        {% for user in suggestions %}
            <div class="list-item">
                <strong>{{ user.displayName }}</strong>
                <p class="card-subtitle">@{{ user.username }}</p>
                <button class="btn btn-outline btn-primary-outline">Follow</button>
            </div>
        {% endfor %}
    </div>
</div>