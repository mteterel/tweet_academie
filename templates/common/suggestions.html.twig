{% if suggestions is not empty %}
<div class="card">
    <strong class="card-header">Who to follow</strong>
    <div class="card-body">
        <div class="list-group list-group-flush">
            {% for user in suggestions %}
                <div class="list-item">
                    <strong>{{ user.displayName }}</strong>
                    <p class="card-subtitle">@{{ user.username }}</p>
                    <button class="btn btn-primary follow-home" data-user-id="{{ user.username }}">Follow</button>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}